<% provide(:title, @tenant.tenant_name) %>
<div class="col-md-6 col-md-offset-3">
	<h3>
		<%= @tenant.tenant_name %>
	</h3>

	<% if admin? @tenant.id %>
		<%= link_to "邀请新成员", tenants_path, class: "btn btn-outline-primary" %>
		<%= link_to "解散该组织", tenant_path, class: "btn btn-danger", method: :delete,
                                       data: { confirm: "您确定解散该组织?" } %>
	<% end %>

	<p>
		租户/组织信息
	</p>
</div>